@nonebot.scheduler.scheduled_job('cron',hour='10') #十点准时发送信息
async def _():
    bot = nonebot.get_bot()
    now = datetime.now(pytz.timezone('Asia/Shanghai'))
    num = random.randint(1,3)
    if num==1:
        f='十点啦～早课辛苦啦，起身活动活动吧！'
    elif num==2:
        f='下课了嘛！辛苦啦辛苦啦o*￣▽￣*ブ'
    else:
        f='下课啦下课啦，休息一下才能更好地出发呀'
    try:
        await bot.send_group_msg(group_id=539098853,
                                 message=f)
        await bot.send_group_msg(group_id=539098853,
                                 message='俯卧撑做了没有呢？')
        await bot.send_group_msg(group_id=539098853,
                                 message='本群提醒喝水小助手提醒jk和许阳按时喝水呀！')
        
    except CQHttpError:
        pass
