from datetime import datetime
import nonebot
import pytz
from aiocqhttp.exceptions import Error as CQHttpError
import random

#这是一个定时在特定群聊发送信息的功能
@nonebot.scheduler.scheduled_job('cron',hour='8') #八点准时发送信息
async def _():
    bot = nonebot.get_bot()
    now = datetime.now(pytz.timezone('Asia/Shanghai')) #地区设定
    try:
        await bot.send_group_msg(group_id=539098853,
                                 message=f'八点啦，新的一天又开始啦~')
        await bot.send_group_msg(group_id=539098853,
                                 message=f'起床上课啦，专业课等着你')
        await bot.send_group_msg(group_id=539098853,
                                 message='每天早上一杯水，健康快乐一百年！')
    except CQHttpError:
        pass
@nonebot.scheduler.scheduled_job('cron',hour='8',minute='30') 
async def _():
    bot = nonebot.get_bot()
    now = datetime.now(pytz.timezone('Asia/Shanghai'))
    try:
        await bot.send_group_msg(group_id=539098853,
                                 message='本群提醒喝水小助手提醒jk和许阳按时喝水呀！')
    except CQHttpError:
        pass
